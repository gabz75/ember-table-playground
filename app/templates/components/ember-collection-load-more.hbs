<div class="table-container" style="position:relative; height: 500px; width: 450px;">
  {{#ember-collection
    items=collection
    cell-layout=(fixed-grid-layout 800 50) as |item index|
  }}
    {{item.id}}
    {{item.firstName}}
    {{item.lastName}}
    {{item.email}}
  {{/ember-collection}}
</div>

<button {{action 'loadMore'}}>Load More</button>
